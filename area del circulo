***Pseudocodigo***



Algoritmo areadelcirculo
	escribir "ingresar el radio:";
	leer r;
	area<-(3.1416*r*r);
	escribir "el area del circulo es:";
	escribir area;
	escribir ":)";

	
FinAlgoritmo
