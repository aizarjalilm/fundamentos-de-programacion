#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;

void main()
{
	int i=1, numpar=0,suma=0,n;
	cout<<"Suma de pares"<<endl;
	cout<<"Ingrese la cantidad de numeros pares que desea sumar: ";
	cin>>n;
	while (i<=n)
	{
	numpar=numpar+2;
	i=i+1;
	suma=suma+numpar;
	}
	cout<<"La suma es: "<<suma;
	getch();
}
