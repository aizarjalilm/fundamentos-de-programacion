#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"

using namespace std;

void main()

{
	float x1,x2,y1,y2,d;
	cout<< "ingrese x1:" ;
	cin>> x1 ;
	cout<< "ingrese x2:" ;
	cin>> x2 ;
	cout<< "ingrese y1:" ;
	cin>> y1 ;
	cout<< "ingrese y2:" ;
	cin>> y2;
	d= sqrt(pow(x2-x1,2))+(pow(y2-y1,2)) ;
	cout<< "la distancia entre los puntos es:" ;
	cout<< d;

	getch();

}


***pseudocodigo***
Proceso ejercicio4
	Escribir 'ingrese x1'
	Leer x1
	Escribir 'ingrese x2'
	Leer x2
	Escribir 'ingrese y1'
	Leer y1
	Escribir 'ingrese y2'
	Leer y2
	d<-(RAIZ((x2-x1)^2)+((y2-y1)^2))
	Escribir ' la distancia entre los puntos es:'
	Escribir d
FinProceso
